From 0caec2b3e5e9519818c39c794cc5d49e94809734 Mon Sep 17 00:00:00 2001
From: YogSottot
Date: Thu, 23 Feb 2017 00:06:57 +0300
Subject: [PATCH] Change detecting libs to system

---
 cmake/modules/Findasio.cmake    | 2 +-
 cmake/modules/Findcatch.cmake   | 2 +-
 cmake/modules/Findkashmir.cmake | 2 +-
 cmake/modules/Findopenssl.cmake | 6 +++---
 4 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/cmake/modules/Findasio.cmake b/cmake/modules/Findasio.cmake
index 25eb1b5..ae9c99e 100644
--- a/cmake/modules/Findasio.cmake
+++ b/cmake/modules/Findasio.cmake
@@ -1,6 +1,6 @@
 # Copyright 2013-2017, Corvusoft Ltd, All Rights Reserved.
 
-find_path( asio_INCLUDE asio.hpp HINTS "${CMAKE_SOURCE_DIR}/dependency/asio/asio/include" "/usr/include" "/usr/local/include" "/opt/local/include" )
+find_path( asio_INCLUDE asio.hpp HINTS "/usr/include" "${CMAKE_SOURCE_DIR}/dependency/asio/asio/include" "/usr/local/include" "/opt/local/include" )
 
 if ( asio_INCLUDE )
     set( ASIO_FOUND TRUE )
diff --git a/cmake/modules/Findcatch.cmake b/cmake/modules/Findcatch.cmake
index 12b4082..df7b658 100644
--- a/cmake/modules/Findcatch.cmake
+++ b/cmake/modules/Findcatch.cmake
@@ -1,6 +1,6 @@
 # Copyright 2013-2017, Corvusoft Ltd, All Rights Reserved.
 
-find_path( catch_INCLUDE catch.hpp HINTS "${CMAKE_SOURCE_DIR}/dependency/catch/include" "/usr/include" "/usr/local/include" "/opt/local/include" )
+find_path( catch_INCLUDE catch.hpp HINTS "/usr/include" "${CMAKE_SOURCE_DIR}/dependency/catch/include" "/usr/local/include" "/opt/local/include" )
 
 if ( catch_INCLUDE )
     set( CATCH_FOUND TRUE )
diff --git a/cmake/modules/Findkashmir.cmake b/cmake/modules/Findkashmir.cmake
index e4d1948..8ce9106 100644
--- a/cmake/modules/Findkashmir.cmake
+++ b/cmake/modules/Findkashmir.cmake
@@ -1,6 +1,6 @@
 # Copyright 2014-2016, Corvusoft Ltd, All Rights Reserved.
 
-find_path( kashmir_INCLUDE kashmir HINTS "${CMAKE_SOURCE_DIR}/dependency/kashmir" "/usr/include" "/usr/local/include" "/opt/local/include" )
+find_path( kashmir_INCLUDE kashmir HINTS "/usr/include" "${CMAKE_SOURCE_DIR}/dependency/kashmir" "/usr/local/include" "/opt/local/include" )
 
 if ( kashmir_INCLUDE )
     set( KASHMIR_FOUND TRUE )
diff --git a/cmake/modules/Findopenssl.cmake b/cmake/modules/Findopenssl.cmake
index 27b78ed..3ebc2cd 100644
--- a/cmake/modules/Findopenssl.cmake
+++ b/cmake/modules/Findopenssl.cmake
@@ -1,8 +1,8 @@
 # Copyright 2013-2017, Corvusoft Ltd, All Rights Reserved.
 
-find_library( ssl_LIBRARY ssl ssleay32 HINTS "${CMAKE_SOURCE_DIR}/dependency/openssl/out32dll" "${CMAKE_SOURCE_DIR}/dependency/openssl" "/usr/local/opt/openssl/lib" "/usr/lib" "/usr/local/lib" "/opt/local/lib" )
-find_library( crypto_LIBRARY crypto libeay32 HINTS "${CMAKE_SOURCE_DIR}/dependency/openssl/out32dll" "${CMAKE_SOURCE_DIR}/dependency/openssl" "/usr/local/opt/openssl/lib" "/usr/lib" "/usr/local/lib" "/opt/local/lib" )
-find_path( ssl_INCLUDE openssl/ssl.h HINTS "${CMAKE_SOURCE_DIR}/dependency/openssl/inc32" "${CMAKE_SOURCE_DIR}/dependency/openssl/include" "/usr/local/opt/openssl/lib" "/usr/include" "/usr/local/include" "/opt/local/include" )
+find_library( ssl_LIBRARY ssl ssleay32 HINTS "/usr/local/opt/openssl/lib" "/usr/lib" "/usr/local/lib" "/opt/local/lib" "${CMAKE_SOURCE_DIR}/dependency/openssl/out32dll" "${CMAKE_SOURCE_DIR}/dependency/openssl" )
+find_library( crypto_LIBRARY crypto libeay32 HINTS "/usr/local/opt/openssl/lib" "/usr/lib" "/usr/local/lib" "/opt/local/lib" "${CMAKE_SOURCE_DIR}/dependency/openssl/out32dll" "${CMAKE_SOURCE_DIR}/dependency/openssl" )
+find_path( ssl_INCLUDE openssl/ssl.h HINTS "/usr/local/opt/openssl/lib" "/usr/include" "/usr/local/include" "/opt/local/include" "${CMAKE_SOURCE_DIR}/dependency/openssl/inc32" "${CMAKE_SOURCE_DIR}/dependency/openssl/include" )
 
 if ( ssl_INCLUDE AND ssl_LIBRARY AND crypto_LIBRARY )
     set( OPENSSL_FOUND TRUE )
